{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SHUKABASE",
  "version": "0.1.0",
  "identifier": "com.shukabase.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Shukabase AI",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "center": true
      },
      {
        "width": 600,
        "height": 600,
        "decorations": false,
        "url": "splash.html",
        "label": "splash",
        "center": true,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "rag_api_server.exe"
    ]
  }
}